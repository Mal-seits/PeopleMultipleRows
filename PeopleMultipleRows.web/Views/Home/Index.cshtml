@model DisplayPeopleViewModel 
@using PeopleMultipleRows.data;
<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-12">
                <a href="/home/addPerson" class="btn btn-success btn-block">Add People</a>
                <table class="table table-hover table-bordered mt-5">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Age</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Person p in Model.PeopleList)
                        {
                        <tr>
                            <td>@p.FirstName</td>
                            <td>@p.LastName</td>
                            <td>@p.Age</td>
                        </tr>
                        }
                    </tbody>
                    </table>
            </div>
        </div>
    </main>
</div>
