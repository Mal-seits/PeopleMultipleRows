 <div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form style="margin-top: 10px;" method="post" action="/home/submitAddPerson">
                    <div id="ppl-rows">
                        <div class="row" style="margin-bottom: 10px; ">
                            <div class="col-md-4">
                                <input class="form-control" type="text" name="people[0].firstname" placeholder="First Name" />
                            </div>
                         
                            <div class="col-md-4">
                                <input class="form-control" type="text" name="people[0].lastname" placeholder="Last Name" />
                            </div>
                       
                            <div class="col-md-4">
                                <input class="form-control" type="text" name="people[0].age" placeholder="Age" />
                            </div>
                         
                        </div>
                    </div>

                    <button class="btn btn-outline-success">Submit</button>
                </form>
                <button id="add-btn" class="btn btn-outline-success">Add Rows</button>
            </div>
        </div>
    </main>
</div>

@section Scripts {

    <script src="~/js/AddRows.js"></script>
}